<div  class="stage-card" 
      style="background: gray;" 
      id="stage-<%= stage.id%>" >
  <div style='display: flex;'>
    <%= link_to '<', 
        group_procedure_stage_previous_path(
          stage.procedure.group.id,
          stage.procedure.id,
          stage), 
        class: 'btn btn-sm btn-primary' %>
    <h4>
      <strong>
        <%= stage.title %>
      </strong>
    </h4>
    <%= link_to '>', 
        group_procedure_stage_next_path(
          stage.procedure.group.id,
          stage.procedure.id,
          stage), 
        class: 'btn btn-sm btn-primary' %>    
  </div>
  <div>
    <% stage.projects.each do |project| %>
      <%= render project %>
    <% end %>
  </div>
  <div>
    
    <%= link_to 'Edit', 
        edit_group_procedure_stage_path(
          stage.procedure.group.id,
          stage.procedure.id,
          stage), 
        data: { turbo_method: "get" }, 
        class: 'btn btn-sm btn-primary'%>
    <%= link_to "Destroy",
        group_procedure_stage_path(
          stage.procedure.group.id,
          stage.procedure.id,
          stage.id), 
        data:{
          turbo_method: "delete",
          turbo_confirm: "Are you sure?"}, 
        class: 'btn btn-sm btn-danger' %>
    
  </div>
</div>
